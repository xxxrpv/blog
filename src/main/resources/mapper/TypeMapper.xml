<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xrp.blog.mapper.TypeMapper">


    <select id="getById" resultType="com.xrp.blog.pojo.Type">
        select id,name from blog.type where id = #{id}
    </select>

    <insert id="save" parameterType="com.xrp.blog.pojo.Type">
        insert into blog.type values (#{id},#{name})
    </insert>

    <!--两个id可能会相冲，取别名即可-->
    <resultMap id="type" type="com.xrp.blog.pojo.Type">
        <id property="id" column="tid"/>
        <result property="name" column="name"/>
        <collection property="blogs" ofType="com.xrp.blog.pojo.Blog">
            <id property="id" column="bid"/>
            <result property="title" column="title"/>
            <result property="typeId" column="type_id"/>
        </collection>
    </resultMap>

    <select id="getBlogType" resultMap="type">
        select t.id tid, t.name, b.id bid,b.type_id
        from type t, blog b
        where t.id = b.type_id
        group by tid
        order by count(tid) desc limit 0,${size}

    </select>


    <select id="findAll" resultMap="type">
        select t.id tid, t.name, b.id bid, b.title,b.type_id
        from type t,blog b
        where t.id = b.type_id
    </select>

    <select id="getAllType" resultType="com.xrp.blog.pojo.Type">
        select * from type
    </select>

    <select id="findByName" resultMap="type">
        select t.id tid, t.name from blog.type t where name = #{name}
    </select>

    <delete id="deleteById" >
        delete from blog.type where id = #{id}
    </delete>

    <update id="update" >
        update blog.type set name = #{name} where id = #{id}
    </update>

</mapper>