<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xrp.blog.mapper.TagMapper">


    <select id="getById" resultType="com.xrp.blog.pojo.Tag">
        select id,name from blog.tag where id = #{id}
    </select>

    <insert id="save" parameterType="com.xrp.blog.pojo.Tag">
        insert into tag values (#{id},#{name});
    </insert>

    <!--两个id可能会相冲，取别名即可-->
    <resultMap id="tags" type="com.xrp.blog.pojo.Tag">
        <id property="id" column="tid"/>
        <result property="name" column="name"/>
        <collection property="blogs" ofType="com.xrp.blog.pojo.Blog">
            <id property="id" column="bid"/>
            <result property="title" column="title"/>
        </collection>
    </resultMap>

    <select id="getAllTagAndBlog" resultMap="tags">
        select t.id tid,t.name,b.id bid,b.title
        from tag t, blog b,blog_tags bt
        where t.id = bt.tag_id and b.id = bt.blog_id
    </select>

    <select id="getAllTag" resultType="com.xrp.blog.pojo.Tag">
        select *
        from tag
    </select>

    <select id="getBlogTag" resultMap="tags">
        select t.id tid, t.name, b.id bid, b.title
        from tag t, blog b, blog_tags bt
        where t.id = bt.tag_id and b.id = bt.blog_id
        group by tid
        order by count(tid) desc limit 0,${size}
    </select>

    <select id="findByName" resultType="com.xrp.blog.pojo.Tag">
        select * from blog.tag where name = #{name}
    </select>

    <delete id="deleteTag">
        delete from blog.tag where id = #{id}
    </delete>

    <update id="update" parameterType="com.xrp.blog.pojo.Tag">
        update blog.tag set name = #{name} where id = #{id};
    </update>

</mapper>